<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- FlowBird-inspired palette -->
    <Color x:Key="Primary">#5F016F</Color>
    <Color x:Key="PrimaryDark">#3D0049</Color>
    <Color x:Key="Secondary">#010BEC</Color>
    <Color x:Key="Accent">#9896F0</Color>
    <Color x:Key="CTA">#FF4081</Color>
    <Color x:Key="Surface">#F8F6FF</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#1A1A2E</Color>
    <Color x:Key="TextSecondary">#6B6B8D</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>

    <!-- Utility -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Divider">#E8E5F0</Color>

    <!-- Required by default styles -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

</ResourceDictionary>
